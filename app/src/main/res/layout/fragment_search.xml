<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="isLoading" type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.navetteclub.ui.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/select_origin"
                android:background="@color/white"
                app:navigationIcon="@drawable/outline_arrow_back_ios_black_24"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dialog" />

        </com.google.android.material.appbar.AppBarLayout>

        <fragment
            android:id="@+id/autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/autocomplete_fragment"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <com.navetteclub.views.MenuItemView
                        android:id="@+id/my_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleText="@string/my_location"
                        app:iconImage="@drawable/outline_near_me_black_24"
                        app:endIconEnable="false"
                        app:subtitleEnable="false"/>

                    <com.navetteclub.views.MenuItemView
                        android:id="@+id/my_favorites"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:iconImage="@drawable/outline_star_outline_black_24"
                        app:titleText="@string/favorites"
                        app:endIconEnable="false"
                        app:subtitleEnable="false"/>

                    <com.navetteclub.views.MenuItemView
                        android:id="@+id/select_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:iconImage="@drawable/outline_map_black_24"
                        app:titleText="@string/select_location"
                        app:endIconEnable="false"
                        app:subtitleEnable="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
