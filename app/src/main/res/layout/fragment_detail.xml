<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="isLoading" type="boolean" />
        <variable name="showMoreButton" type="boolean" />
        <variable name="origin" type="com.navetteclub.database.entity.Point" />
        <variable name="destination" type="com.navetteclub.database.entity.Point" />
        <variable name="retours" type="com.navetteclub.database.entity.Point" />

        <variable name="isLoadingDirection" type="boolean" />
        <variable name="distance" type="String" />
        <variable name="delay" type="String" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/colorBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <ImageView
                                android:id="@+id/originLocationIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:contentDescription="@string/image"
                                android:tint="@color/colorIcon"
                                android:src="@drawable/outline_trip_origin_black_18"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:id="@+id/originLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/originSelectEndIcon"
                                android:layout_toLeftOf="@+id/originSelectEndIcon"
                                android:layout_toEndOf="@+id/originLocationIcon"
                                android:layout_toRightOf="@+id/originLocationIcon"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/originLabelText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/origin"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/colorText"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"/>

                                <TextView
                                    android:id="@+id/originText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{origin==null?@string/search:origin.name}"
                                    android:textAppearance="?attr/textAppearanceSubtitle1"
                                    android:textColor="@color/colorText"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"/>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/originSelectEndIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/originEndIcon"
                                android:layout_toLeftOf="@+id/originEndIcon"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:contentDescription="@string/image"
                                android:src="@drawable/outline_near_me_black_24"
                                android:tint="@color/colorText" />

                            <ImageView
                                android:id="@+id/originEndIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:contentDescription="@string/image"
                                android:tint="@color/colorText"
                                android:src="@drawable/outline_my_location_black_24"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <ImageView
                                android:id="@+id/destinationLocationIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:contentDescription="@string/image"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/outline_place_black_24"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:id="@+id/destinationLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/destinationEndIcon"
                                android:layout_toLeftOf="@+id/destinationEndIcon"
                                android:layout_toEndOf="@+id/destinationLocationIcon"
                                android:layout_toRightOf="@+id/destinationLocationIcon"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/destinationLabelText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/destination"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/colorText"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"/>

                                <TextView
                                    android:id="@+id/destinationText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{destination==null?@string/search:destination.name}"
                                    android:textAppearance="?attr/textAppearanceSubtitle1"
                                    android:textColor="@color/colorText"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"/>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/destinationEndIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:contentDescription="@string/image"
                                android:tint="@color/colorAlert"
                                android:src="@drawable/baseline_list_black_24"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:visibility="@{retours==null?View.GONE:View.VISIBLE}" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="@{retours==null?View.GONE:View.VISIBLE}">

                            <ImageView
                                android:id="@+id/retoursLocationIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:contentDescription="@string/image"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/outline_trip_origin_black_18"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:id="@+id/retoursLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/retoursEndIcon"
                                android:layout_toLeftOf="@+id/retoursEndIcon"
                                android:layout_toEndOf="@+id/retoursLocationIcon"
                                android:layout_toRightOf="@+id/retoursLocationIcon"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/retoursLabelText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/retours"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/colorText"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"/>

                                <TextView
                                    android:id="@+id/retoursText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{retours==null?@string/search:retours.name}"
                                    android:textAppearance="?attr/textAppearanceSubtitle1"
                                    android:textColor="@color/colorText"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"/>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/retoursEndIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:contentDescription="@string/image"
                                android:tint="@color/colorAlert"
                                android:src="@drawable/baseline_list_black_24"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/orderInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/distanceLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp">

                            <TextView
                                android:id="@+id/distanceLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/distance"/>

                            <TextView
                                android:id="@+id/distanceValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@{distance}"
                                android:textAppearance="?attr/textAppearanceHeadline5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/delayLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/distanceLayout"
                            android:layout_toRightOf="@+id/distanceLayout">

                            <TextView
                                android:id="@+id/delayLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/delay"/>

                            <TextView
                                android:id="@+id/delayValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@{delay}"
                                android:textAppearance="?attr/textAppearanceHeadline6"/>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:text="@string/book_now"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
