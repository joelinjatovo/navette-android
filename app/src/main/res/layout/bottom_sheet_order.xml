<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    app:behavior_skipCollapsed="true"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bsHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <View
            android:layout_width="64dp"
            android:layout_height="5dp"
            android:background="@color/colorIcon"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Order Details"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/orderInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/distanceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/distanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"/>

                    <TextView
                        android:id="@+id/distanceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 km"
                        android:textAppearance="?attr/textAppearanceHeadline5"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/delayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/distanceLayout"
                    android:layout_toRightOf="@+id/distanceLayout">

                    <TextView
                        android:id="@+id/delayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delay"/>

                    <TextView
                        android:id="@+id/delayValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 min"
                        android:textAppearance="?attr/textAppearanceHeadline6"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/carImageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/outline_directions_car_black_48"
            android:contentDescription="@string/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/carNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toEndOf="@+id/carImageView"
            android:layout_toRightOf="@+id/carImageView"
            android:layout_toLeftOf="@+id/iconArrowImageView"
            android:layout_toStartOf="@+id/iconArrowImageView"
            android:text="@string/car"
            android:textAppearance="?attr/textAppearanceHeadline6"/>

        <TextView
            android:id="@+id/carPlaceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/carNameTextView"
            android:layout_toEndOf="@+id/carImageView"
            android:layout_toRightOf="@+id/carImageView"
            android:layout_toLeftOf="@+id/iconArrowImageView"
            android:layout_toStartOf="@+id/iconArrowImageView"
            android:text="{@string/car_place(0)}" />

        <ImageView
            android:id="@+id/iconArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/outline_arrow_forward_ios_black_36"
            android:contentDescription="@string/image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/placeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/placeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/outline_person_outline_black_36"
            android:contentDescription="@string/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/placeLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toEndOf="@+id/placeImageView"
            android:layout_toRightOf="@+id/placeImageView"
            android:layout_toLeftOf="@+id/placeIconArrowImageView"
            android:layout_toStartOf="@+id/placeIconArrowImageView"
            android:text="@string/label_place_count"
            android:textAppearance="?attr/textAppearanceHeadline6"/>

        <TextView
            android:id="@+id/placeCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeLabelTextView"
            android:layout_toEndOf="@+id/placeImageView"
            android:layout_toRightOf="@+id/placeImageView"
            android:layout_toLeftOf="@+id/placeIconArrowImageView"
            android:layout_toStartOf="@+id/placeIconArrowImageView"
            android:text="2 personnes" />


        <ImageView
            android:id="@+id/placeIconArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/outline_arrow_forward_ios_black_36"
            android:contentDescription="@string/image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/bookNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="Reservez maintenant"/>

</LinearLayout>