<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="isLoading" type="boolean" />
        <variable name="isUnauthenticated" type="boolean" />
        <variable name="showMoreButton" type="boolean" />
        <variable name="orderId" type="String" />
        <variable name="pointTitle" type="String" />
        <variable name="point" type="com.navetteclub.database.entity.Point" />
        <variable name="club" type="com.navetteclub.database.entity.Point" />
        <variable name="amount" type="String" />
        <variable name="status" type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:tint="@color/black"
                    android:src="@drawable/outline_check_black_24" />

                <TextView
                    android:id="@+id/orderTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/title_view_order(orderId)}"
                    android:layout_marginStart="10dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_toEndOf="@id/icon"
                    android:layout_toStartOf="@id/clubNameTextView"/>

                <TextView
                    android:id="@+id/clubNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@{club.name}"
                    android:textColor="@color/colorIcon"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/pointIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/outline_place_black_18"
                    android:tint="@color/colorIcon"/>

                <TextView
                    android:id="@+id/pointLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/pointIcon"
                    android:layout_centerVertical="true"
                    android:text="@{pointTitle}"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="@color/colorIcon"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/pointName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textAlignment="textEnd"
                    android:layout_toEndOf="@+id/pointLabel"
                    android:text="@{point.name}"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textColor="@color/colorText"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorIcon"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:id="@+id/amountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/more_buttom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="@{amount}"
                        android:textAppearance="?attr/textAppearanceHeadline5"/>

                    <TextView
                        android:id="@+id/statusLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/order_status(status)}"/>

                </LinearLayout>

                <Button
                    android:id="@+id/more_buttom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/button_more"
                    android:layout_centerVertical="true"
                    style="?attr/materialButtonOutlinedStyle"
                    android:textColor="@color/colorAccent"
                    app:strokeColor="@color/colorAccent"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>