                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/point2Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/point2Label"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toEndOf="@id/point2Icon"
                                    android:maxLines="1"
                                    android:text="@{point2}"
                                    android:textAppearance="?attr/textAppearanceSubtitle2"
                                    android:textColor="@color/colorText" />

                            </RelativeLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/order1Info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <LinearLayout
                                    android:id="@+id/distance1Layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/separator1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:id="@+id/distance1Label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/distance"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/distance1Value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@{distance1}"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        android:textColor="@color/colorAccent" />

                                </LinearLayout>

                                <View
                                    android:id="@+id/separator1"
                                    android:layout_width="1dp"
                                    android:layout_height="20dp"
                                    android:background="@color/colorIcon"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/delay1Layout"
                                    app:layout_constraintStart_toEndOf="@id/distance1Layout"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:id="@+id/delay1Layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/separator1"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:id="@+id/delay1Label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/delay"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/delay1Value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@{delay1}"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        android:textColor="@color/colorAccent" />

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <View
