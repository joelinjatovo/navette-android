                                android:paddingRight="12dp"
                                android:text="@{date}"
                                android:textAlignment="textEnd"
                                android:textAppearance="?attr/textAppearanceSubtitle1"
                                android:textColor="@color/colorText" />

                        </RelativeLayout>

