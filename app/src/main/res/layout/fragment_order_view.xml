                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:visibility="@{(point3==null)||(point4==null)?View.GONE:View.VISIBLE}"
                        app:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">

                            <ImageView
                                android:id="@+id/point2MainIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/image"
                                android:src="@drawable/round_swap_vertical_circle_black_24"
                                android:tint="@color/colorAccent" />

                            <TextView
                                android:id="@+id/point2MainLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/point2MainDetail"
                                android:layout_toEndOf="@id/point2MainIcon"
                                android:text="@string/ride_drop"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/point2MainDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"
                                android:text="@string/details"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/colorAccent" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/background" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:visibility="@{(point3==null)||(point4==null)?View.GONE:View.VISIBLE}"
                        app:cardCornerRadius="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <ImageView
                                    android:id="@+id/point3Icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/image"
                                    android:src="@drawable/round_lens_black_18"
                                    android:tint="@color/colorAlert" />

                                <TextView
                                    android:id="@+id/point3Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toEndOf="@id/point3Icon"
                                    android:text="@{point3Title}"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/point3Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/point3Label"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toEndOf="@+id/point3Icon"
                                    android:maxLines="1"
                                    android:text="@{point3}"
                                    android:textAppearance="?attr/textAppearanceSubtitle2"
                                    android:textColor="@color/colorText" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <ImageView
                                    android:id="@+id/point4Icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/image"
                                    android:src="@drawable/round_lens_black_18"
                                    android:tint="@color/colorAccent" />

                                <TextView
                                    android:id="@+id/point4Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toEndOf="@id/point4Icon"
                                    android:text="@{point4Title}"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/point4Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/point4Label"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toEndOf="@id/point4Icon"
                                    android:maxLines="1"
                                    android:text="@{point4}"
                                    android:textAppearance="?attr/textAppearanceSubtitle2"
                                    android:textColor="@color/colorText" />

                            </RelativeLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/order2Info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <LinearLayout
                                    android:id="@+id/distance2Layout"
                                    android:layout_width="wrap_content"
