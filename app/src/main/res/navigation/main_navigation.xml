<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.joelinjatovo.navette.ui.main.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action android:id="@+id/action_home_to_order"
            app:destination="@id/navigation_order" />

    </fragment>

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.joelinjatovo.navette.ui.main.maps.MapsFragment"
        android:label="@string/title_maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.joelinjatovo.navette.ui.main.notification.NotificationFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_notification"/>

    <navigation android:id="@+id/navigation_account"
        app:startDestination="@id/fragment_profile">

        <fragment
            android:id="@+id/fragment_profile"
            android:name="com.joelinjatovo.navette.ui.main.auth.ProfileFragment"
            android:label="@string/title_profile"
            tools:layout="@layout/fragment_profile"/>

        <fragment
            android:id="@+id/login_fragment"
            android:name="com.joelinjatovo.navette.ui.main.auth.login.LoginFragment"
            android:label="@string/title_login"
            tools:layout="@layout/fragment_login">

            <action android:id="@+id/action_login_to_register"
                app:destination="@id/navigation_register" />

        </fragment>

        <navigation android:id="@+id/navigation_register"
            app:startDestination="@id/register_fragment">

            <fragment
                android:id="@+id/register_fragment"
                android:name="com.joelinjatovo.navette.ui.main.auth.register.RegisterFragment"
                android:label="@string/title_register"
                tools:layout="@layout/fragment_register">

                <action android:id="@+id/action_register_to_verify_phone"
                    app:destination="@id/verify_phone_fragment" />

            </fragment>

            <fragment android:id="@+id/verify_phone_fragment"
                android:name="com.joelinjatovo.navette.ui.main.auth.verify.VerifyPhoneFragment"
                android:label="Choose User + Password"
                tools:layout="@layout/fragment_verify_phone" />

        </navigation>

    </navigation>

    <navigation android:id="@+id/navigation_order"
        app:startDestination="@id/order_fragment">

        <fragment
            android:id="@+id/order_fragment"
            android:name="com.joelinjatovo.navette.ui.main.order.OrderFragment"
            android:label="@string/title_order"
            tools:layout="@layout/fragment_order">

            <action android:id="@+id/action_order_to_clubs"
                app:destination="@id/clubs_fragment" />

        </fragment>

        <fragment android:id="@+id/clubs_fragment"
            android:name="com.joelinjatovo.navette.ui.main.club.ClubsFragment"
            android:label="Choose Destination"
            tools:layout="@layout/fragment_clubs" />

    </navigation>

</navigation>
